<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>User List</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta
      name="description"
      content="View all users, including their profiles and options to edit or delete them."
    />
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <div class="nav mb-10">
        <a class="text-blue-500" href="/">Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if (users.length > 0) { %> <% users.forEach(user => { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg overflow-hidden">
          <div class="w-full h-72 rounded-lg">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt="Profile picture of <%= user.name %>"
            />
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a
              class="text-blue-400 hover:text-blue-300"
              href="/edit/<%= user._id %>"
              >Edit User</a
            >
            <a
              class="text-red-500 hover:text-red-400"
              href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <% }); %> <% } else { %>
        <p class="text-zinc-500">No users found</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
